<!-- header -->
<section
	class="mx-auto w-full bg-[#331E36] sticky top-0 shadow-lg z-50">
	<!-- navbar -->
	<nav class="flex justify-between mx-auto text-white max-w-7xl">
		<div class="px-5 xl:px-0 py-6 flex w-full items-center">
			<a class="text-xl md:text-3xl tracking-wide  border-b-2 border-[#9FF3A9] font-['MangueiraHeavy']" href="{{site.uri.public}}" style="font-family: 'MangueiraHeavy';">
				Football Knockout.
			</a>
			<!-- Nav Links -->
			<ul class="hidden lg:flex px-4 mx-auto  space-x-12">
				<li>
					<a class="hover:text-gray-200 hover:border-b-2 hover:border-[#9FF3A9] hover:underline-offset-8" href="/leagues">My Leagues</a>
				</li>
				<li>
					<a class="hover:text-gray-200 hover:border-b-2 hover:border-[#9FF3A9]" href="#">Rules</a>
				</li>
				{% if checkAccess('uri_permissions') %}
					<li>
						<a class="hover:text-gray-200 hover:border-b-2 hover:border-[#9FF3A9]" href="/gameweek">Gameweeks</a>	
					</li>
				{% endif %}
			</ul>
			<!-- Header Icons -->
			<div
				class="hidden lg:flex items-center space-x-5 items-center">
				<!-- Sign In / Register      -->
				{% if current_user.first_name %}
				<a class="flex items-center hover:text-gray-200 space-x-2 hover:border-b-2 hover:border-[#9FF3A9]" href="{{site.uri.public}}/account/settings">
					<div>{{current_user.first_name}} {{current_user.last_name}}</div>
				</a>
				<a class="flex items-center hover:text-gray-200 space-x-2 hover:border-b-2 hover:border-[#9FF3A9]" href="{{site.uri.public}}/account/logout">
					Log Out
				</a>
				{% else %}
				<a class="flex items-center hover:text-gray-200 space-x-2" href="{{site.uri.public}}/account/register">Register</a>
				<a class="flex items-center hover:text-gray-200 space-x-2" href="{{site.uri.public}}/account/sign-in">Log In</a>
				{% endif %}
			</div>
		</div>
		<!-- Responsive navbar -->

		<a class="navbar-burger self-center mr-12 lg:hidden" href="#" onclick="toggleMobileMenu()">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hover:text-gray-200" fill="none" viewbox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
			</svg>
		</a>
	</nav>
	<div class="bg-gray-50 hidden lg:hidden" id="mobile-menu">
		<ul class="p-4 space-between-2">
			<a class="cursor-pointer" href="{{site.uri.public}}/leagues">
				<li class="p-2">My Leagues</li>
			</a>
			<a class="cursor-pointer">
				<li class="p-2">Rules</li>
			</a>
			<a class="cursor-pointer" href="{{site.uri.public}}/account/settings">
				<li class="p-2">My Account</li>
			</a>
			{% if current_user.first_name %}
				<a class="flex items-center hover:text-gray-200 space-x-2 p-2" href="{{site.uri.public}}/account/settings">
					<div>{{current_user.first_name}} {{current_user.last_name}}</div>
				</a>
				<a class="flex items-center hover:text-gray-200 space-x-2 p-2"  href="{{site.uri.public}}/account/logout">
					Log Out
				</a>
				{% else %}
				<a class="flex items-center hover:text-gray-200 space-x-2" href="{{site.uri.public}}/account/register">Register</a>
				<a class="flex items-center hover:text-gray-200 space-x-2 p-2" href="{{site.uri.public}}/account/sign-in">Log In</a>
				{% endif %}
		</ul>
	</div>
</section>
<script>
	function toggleMobileMenu() {
document.getElementById('mobile-menu').classList.toggle('hidden');
}
</script>
