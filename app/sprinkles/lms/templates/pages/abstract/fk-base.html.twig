																	                <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
																	                <script src="//oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
																	            <![endif]-->

			{% include "pages/partials/analytics.html.twig" %}
				<script>
async function fetchAlerts() {
const response = await fetch("{{ site.uri.public }}/alerts");
const alerts = await response.json();
if (alerts.length > 0) {
var alertsContainer = document.getElementById('alerts');
alerts.forEach((al) => {
var newAlert = document.createElement('div');
switch (al.type) {
case 'success': newAlert.setAttribute('class', 'bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg relative flex justify-between');
break;
case 'danger': newAlert.setAttribute('class', 'bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg relative flex justify-between');
break;
case 'warning': newAlert.setAttribute('class', 'bg-orange-100 border border-orange-400 text-orange-700 px-4 py-3 rounded-lg relative flex justify-between');
break;
case 'info': newAlert.setAttribute('class', 'bg-gray-100 border border-gray-400 text-gray-700 px-4 py-3 rounded-lg relative flex justify-between');
break;
}
var message = document.createElement('span');
message.innerHTML = al.message;
newAlert.appendChild(message);
var close = document.createElement('p');
close.innerHTML = 'x';
close.setAttribute('class', 'cursor-pointer font-bold');
close.setAttribute("onclick", "this.parentNode.style.display = 'none';");
newAlert.appendChild(close);
alertsContainer.appendChild(newAlert);
});
}
}
		</script>
	</head>
