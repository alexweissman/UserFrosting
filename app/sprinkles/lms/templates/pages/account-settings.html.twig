				<div class="bg-gray-50 rounded-lg p-10">
					<div class="w-full flex justify-between">
						<h1 class="text-[#331E36] font-semibold text-4xl tracking-tight w-full text-center" style="font-family: 'MangueiraSemiBold';">Marketing and Reminder Settings</h1>
						
                        
					</div>
					<div id="alerts"></div>
                    {% include "forms/settings-marketing.html.twig" %}
				</div>
            </div>
            <div class="rounded-xl bg-gradient-to-r from-[#ACFC7A] via-[#9FF3A9] to-[#9CECD5] p-1 w-full sm:w-full md:w-3/4 lg:w-2/3 mx-auto shadow-lg">
