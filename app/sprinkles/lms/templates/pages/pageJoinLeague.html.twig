{% extends "pages/abstract/fk-base.html.twig" %}
{% block page_title %}Join League
				{% endblock %}
{% block content %}
	<section class="mx-auto w-full ">
		<div class="justify-between mx-auto max-w-7xl mt-12 space-y-6 ">
			<div class="rounded-xl bg-gradient-to-r from-[#ACFC7A] via-[#9FF3A9] to-[#9CECD5] p-1 w-full sm:w-full md:w-3/4 lg:w-1/2 mx-auto shadow-lg">
				<div class="bg-gray-50 rounded-lg p-10">
					<div class="w-full flex justify-between">
						<h1 class="text-[#331E36] font-semibold text-4xl tracking-tight w-full text-center" style="font-family: 'MangueiraSemiBold';">Join League</h1>
						<a href="{{site.uri.public}}/leagues">
							<button class="px-4 py-2 rounded-md border border-[#331E36] text-[#331E36] text-sm font-semibold uppercase tracking-wider">Back</button>
						</a>
					</div>
					<div id="alerts"></div>
					<form class="space-y-5" method="POST" action="{{site.uri.public}}/leagues/join-league">
						{% include "forms/csrf.html.twig" %}
						<div class="flex flex-col space-y-2">
							<label class="text-gray-700">League Joining Code</label>
							<input type="text" name="league_joining_code" class="border  border-gray-300 px-2 py-2 rounded-md" placeholder="S9mrWyhD" required/>
							<p class="text-xs">Enter the code given to you from the league administrator e.g. "S9mrWyhD".</p>
						</div>
						<button class="px-4 py-2 rounded-md bg-[#331E36]  border border-[#331E36] text-white text-sm font-semibold uppercase tracking-wider w-full">
							<p>Join</p>
						</button>
					</form>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
