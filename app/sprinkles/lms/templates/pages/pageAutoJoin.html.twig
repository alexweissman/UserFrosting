{% extends "pages/abstract/fk-base.html.twig" %}

{% block page_title %}Join {{league.league_name}}{% endblock %}
{% block content %}
 
<section class="mx-auto w-full">
    <div class="justify-between mx-auto max-w-7xl mt-12 space-y-6 ">
    <div class="rounded-xl bg-gradient-to-r from-[#ACFC7A] via-[#9FF3A9] to-[#9CECD5] p-1 w-full sm:w-full md:w-3/4 lg:w-1/2 mx-auto shadow-lg">
        <div class="bg-gray-50 rounded-lg p-10">
        <h1 class="text-[#331E36] font-semibold text-4xl tracking-tight w-full text-center" style="font-family: 'MangueiraSemiBold';">You've been invited to join {{league.league_name}}</h1>
        <div id="alerts" class="mt-3"></div>
        <div class="form-alerts" id="alerts-page" ></div>
        
        <div class="flex flex-col space-y-2 mt-5">
          <p>Your friends are waiting for you in the League!</p>

          <p>Have an account already?</p>
          <a href="{{site.public.url}}/account/sign-in?join_code={{league.join_code}}">
            <button class="px-4 py-2 rounded-md bg-[#331E36]  border border-[#331E36] text-white text-sm font-semibold uppercase tracking-wider w-full transition-colors duration-400 ease-in-out hover:bg-[#5a3560]">Sign in here</button>
          </a>

          <p>Need to make an account?</p>
          <a href="{{site.public.url}}/account/register?join_code={{league.join_code}}">
            <button class="px-4 py-2 rounded-md bg-[#331E36]  border border-[#331E36] text-white text-sm font-semibold uppercase tracking-wider w-full transition-colors duration-400 ease-in-out hover:bg-[#5a3560]">Register here</button>
          </a>
        </div>
        
    </div>
  </section>
{% endblock %}

{% block scripts_page %}
    <!-- Include validation rules -->
    <script>
        {% include "pages/partials/page.js.twig" %}
    </script>
{% endblock %} 
