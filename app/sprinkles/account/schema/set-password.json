{
    "password" : {
        "validators" : {
            "required" : {
                "message" : "ACCOUNT_SPECIFY_PASSWORD"
            },
            "length" : {
                "min" : 12,
                "max" : 100,
                "message" : "ACCOUNT_PASS_CHAR_LIMIT"
            }
        }  
    },
    "passwordc" : {
        "validators" : {
            "required" : {
                "message" : "ACCOUNT_SPECIFY_PASSWORD"
            },
            "matches" : {
                "field" : "password",
                "message" : "ACCOUNT_PASS_MISMATCH"
            },
            "length" : {
                "min" : 12,
                "max" : 100,
                "message" : "ACCOUNT_PASS_CHAR_LIMIT"
            }
        } 
    },
    "secret_token" : {
        "validators" : {
            "required" : {
                "message" : "FORGOTPASS_INVALID_TOKEN"
            }
        }
    }
}
